 */
package game;

import java.util.Scanner;

/**
 * 
 */
public class Game {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Board b;
		Scanner in = new Scanner(System.in);
		boolean newGame = false;
		Player p1;
		Player p2;
		Player player;
		do {

			
			String input;
			int col;
			int turn = 0;
			while(!b.hasConnectFour()) {
				System.out.println(b);
				do{
					System.out.println(String.format("Select the column to place your piece in (0-%d)", b.getWidth()-1));
					input = in.nextLine();
					col = Integer.parseInt(input);
				}while(!player.placePiece(col));
			}
			System.out.println(b);
			System.out.println(String.format("Player %s Wins!", b.getWinner().toString()));
		}while(newGame);
		in.close();
		
		
	}
}
