/**
 * 
 */
package game;

import java.util.Scanner;

/**
 * 
 */
public class Game {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Board b = new Board();
		Player player = new Player("John", b, Colour.RED);
		
		System.out.println(player);
		Scanner in = new Scanner(System.in);
		String input;
		int col;
		int turn = 0;
		while(!b.hasConnectFour()) {
			System.out.println(b);
			do{
				System.out.println(String.format("Select the column to place your piece in (0-%d)", b.getWidth()-1));
				input = in.nextLine();
				col = Integer.parseInt(input);
			}while(!player.placePiece(col));
		}
		System.out.println(b);
		System.out.println(String.format("Player %s Wins!", b.getWinner().toString()));
		in.close();
	}
}
