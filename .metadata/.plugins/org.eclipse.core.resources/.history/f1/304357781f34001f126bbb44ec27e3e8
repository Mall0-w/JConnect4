package game;
public class Board {
	private static final int DEFAULT_WIDTH = 7;
	private static final int DEFAULT_HEIGHT = 6;
	private boolean finished = false;
	private int height;
	private int width;
	private Piece [][] board;
	
	public class InvalidSelectionError extends Exception{
		public InvalidSelectionError(String message) {
			super(message);
		}
	}
	
	public Board(int height, int width) {
		if(height < 4 || width < 4) {
			throw new IllegalArgumentException("Both Width and Height must be at least 4");
		}
		this.height = height;
		this.width = width;
		board = new Piece[height][width];
	}
	
	public Board() {
		this(DEFAULT_HEIGHT, DEFAULT_WIDTH);
	}
	
	public int getWidth() {
		return this.width;
	}
	
	
	public boolean place(Piece p, int column) throws InvalidSelectionError {
		if(column >= this.width || column < 0)
			throw new IllegalArgumentException("column does not exist");
		for(int i = this.height - 1; i >= 0; i --) {
			if(this.board[i][column] == null) {
				this.board[i][column] = p;
				 this.hasConnectFour();
			}
		}
		throw new InvalidSelectionError("column is full");
	}
	
	public boolean hasConnectFour() {
		return finished;
	}
	
	public String toString() {
		StringBuilder finished = new StringBuilder();
		for(Piece[] row : board) {
			for(Piece p : row) {
				if(p == null) finished.append("_ ");
				else finished.append(p.toString() + " ");
			}
			finished.append("\n");
		}
		//remove the last character to get rid of the final newline (board cannot be size 0 so don't have to worry about errors)
		finished.deleteCharAt(finished.length() - 1);
		return finished.toString();
	}
}
