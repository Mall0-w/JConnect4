package game;
public class Board {
	private static final int DEFAULT_WIDTH = 7;
	private static final int DEFAULT_HEIGHT = 6;
	private boolean finished = false;
	private int height;
	private int width;
	private Piece [][] board;
	
	public Board(int height, int width) {
		if(height < 4 || width < 4) {
			throw new IllegalArgumentException("Both Width and Height must be at least 4");
		}
		this.height = height;
		this.width = width;
		board = new Piece[height][width];
	}
	
	public Board() {
		this(DEFAULT_HEIGHT, DEFAULT_WIDTH);
	}
	
	public boolean place(Piece p, int column) {
		for(int i = 0; i < this.height; i ++) {
			if(this.board[i][column] == null) {
				this.board[i][column] = p;
				if(this.hasConnectFour(column, i)) {
					return true;
				}
			}
		}
		return false;
	}
	
	private boolean hasConnectFour(int row, int column) {
		return finished;
	}
	
	public String toString() {
		String finished = "";
		for(Piece[] row : board) {
			for(Piece p : row) {
				if(p == null) finished += "_ ";
				else finished += p.toString();
			}
			finished += "\n";
		}
		//remove the last character to get rid of the final newline (board cannot be size 0 so don't have to worry about errors)
		
		return finished.substring(0, finished.length()-1);
	}
}
